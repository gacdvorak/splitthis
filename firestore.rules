rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is a participant in a bucket
    function isParticipant(bucketId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/buckets/$(bucketId)) &&
        get(/databases/$(database)/documents/buckets/$(bucketId)).data.participants[request.auth.uid] != null;
    }

    // Buckets collection
    match /buckets/{bucketId} {
      // Users can read buckets they are participants in
      allow read: if isAuthenticated() &&
        request.auth.uid in resource.data.participantIds;

      // Users can create buckets (they must include themselves in participantIds)
      allow create: if isAuthenticated() &&
        request.resource.data.createdBy == request.auth.uid &&
        request.auth.uid in request.resource.data.participantIds;

      // Users can update buckets they are participants in
      allow update: if isAuthenticated() &&
        request.auth.uid in resource.data.participantIds;

      // Users can delete buckets they created
      allow delete: if isAuthenticated() &&
        resource.data.createdBy == request.auth.uid;
    }

    // Expenses collection
    match /expenses/{expenseId} {
      // Users can read expenses in buckets they participate in
      allow read: if isParticipant(resource.data.bucketId);

      // Users can create expenses in buckets they participate in
      allow create: if isAuthenticated() &&
        isParticipant(request.resource.data.bucketId) &&
        request.resource.data.createdBy == request.auth.uid;

      // Users can update expenses they created or in buckets they participate in
      allow update: if isAuthenticated() &&
        isParticipant(resource.data.bucketId);

      // Users can delete expenses they created or in buckets they participate in
      allow delete: if isAuthenticated() &&
        isParticipant(resource.data.bucketId);
    }

    // Credits collection
    match /credits/{creditId} {
      // Users can read credits in buckets they participate in
      allow read: if isParticipant(resource.data.bucketId);

      // Users can create credits in buckets they participate in
      allow create: if isAuthenticated() &&
        isParticipant(request.resource.data.bucketId) &&
        request.resource.data.createdBy == request.auth.uid;

      // Users can update credits they created or in buckets they participate in
      allow update: if isAuthenticated() &&
        isParticipant(resource.data.bucketId);

      // Users can delete credits they created or in buckets they participate in
      allow delete: if isAuthenticated() &&
        isParticipant(resource.data.bucketId);
    }

    // Invitations collection
    match /invitations/{invitationId} {
      // Anyone can read invitations by token (for accepting invites)
      // Participants in the bucket can also read all invitations for that bucket
      allow read: if isAuthenticated() &&
        (isParticipant(resource.data.bucketId) ||
         request.auth.token.email == resource.data.email);

      // Only participants in the bucket can create invitations
      allow create: if isAuthenticated() &&
        isParticipant(request.resource.data.bucketId) &&
        request.resource.data.invitedBy == request.auth.uid &&
        request.resource.data.status == 'pending';

      // Only the person who created the invitation can update it
      // Or the invited person can update it to 'accepted' status
      allow update: if isAuthenticated() &&
        ((resource.data.invitedBy == request.auth.uid) ||
         (request.auth.token.email == resource.data.email &&
          request.resource.data.status == 'accepted' &&
          resource.data.status == 'pending'));

      // Only the inviter or bucket participants can delete invitations
      allow delete: if isAuthenticated() &&
        (resource.data.invitedBy == request.auth.uid ||
         isParticipant(resource.data.bucketId));
    }
  }
}
